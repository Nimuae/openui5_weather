<core:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    controllerName="hss.weather.controller.Main"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <Page
        backgroundDesign="Solid"
        showHeader="false">
        <content>
            <core:Icon
                src="sap-icon://action-settings"
                class="CustomizeBtn" />
            <TileContainer>
                <tiles>
                    <StandardTile
                        title="Wetter"
                        info="Bla"
                        icon="sap-icon://wrench"
                        class="Test"
                        type="Monitor" />
                    <StandardTile
                        number="13"
                        numberUnit="°C"
                        title="Heiter"
                        info="20°3'2''N / 10°12'59''W"
                        icon="http://icons.wxug.com/i/c/v4/partlycloudy.svg" />
                    <StandardTile
                        title="Wetter"
                        info="Bla"
                        icon="sap-icon://wrench"
                        class="Test"
                        type="Create" />
                    <StandardTile
                        title="Wetter"
                        info="Bla"
                        icon="dickbutt.png"
                        class="Test" />
                    <CustomTile
                        class="sapMTile CustomTile">
                        <VBox
                            fitContainer="true"
                            justifyContent="SpaceBetween">
                            <Label
                                text="Wiesloch"
                                class="City" />
                            <HBox
                                justifyContent="SpaceBetween">
                                <HBox
                                    class="Temp">
                                    <Label
                                        text="{conditions>/current_observation/temp_c}"
                                        class="Number" />
                                    <Label
                                        text="°C"
                                        class="Unit" />
                                </HBox>
                                <Image
                                    src="{conditions>/current_observation/icon_url}"
                                    class="Icon" />
                            </HBox>
                            <HBox>
                                <Label
                                    text="Gefühlt:" />
                                 <Label
                                    text="{conditions>/current_observation/feelslike_c}"
                                    class="Number" />
                                 <Label
                                    text="°C"
                                    class="Unit" />
                            </HBox>
                        </VBox>
                    </CustomTile>
                </tiles>
            </TileContainer>
        </content>
    </Page>
</core:View>