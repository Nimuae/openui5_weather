<core:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    controllerName="hss.weather.controller.Main"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:hss="hss.weather.control">
    <Page
        class="MainPage"
        showHeader="false">
        <content>
            <core:Icon
                src="sap-icon://action-settings"
                class="CustomizeBtn"
                press="navigateToCustomizing" />
            <VBox
                fitContainer="true"
                justifyContent="Center">
                <HBox
                    justifyContent="Center" >

                    <FlexBox justifyContent="End" class="TileTemp Tile">
                        <VBox width="100%" class="alignCenterVertically" justifyContent= "SpaceBetween">

                            <Label text="{data>/current_observation/display_location/city}" class="town"/>
                            <VBox justifyContent="SpaceBetween" alignItems="Begin">
                                <Label
                                    text="{
                                        path: 'data>/current_observation/temp_c', 
                                        formatter: 'hss.weather.view.Formatter.roundTemp'
                                    }°C"
                                    visible="{
                                        path: 'data>/current_observation/temp_c',
                                        formatter: 'hss.weather.view.Formatter.animateLabel'
                                    }"
                                    class="curTemp"/>
                            </VBox>

                            <VBox class="WeatherIcon" alignItems="Center">
                                <Image
                                    src="{
                                        path: 'data>/current_observation/icon',
                                        formatter: 'hss.weather.view.Formatter.image'
                                    }" 
                                    height="8rem"
                                    class="ImgTempTileMarginBottom"/>
                                <Label
                                    text="{data>/current_observation/weather}"
                                    class="curWeather"
                                    textAlign="Center" />
                            </VBox>

                            <HBox justifyContent= "SpaceBetween">
                                <Label
                                    text="Gefühlt: {
                                        path: 'data>/current_observation/feelslike_c',
                                        formatter: 'hss.weather.view.Formatter.roundTemp'
                                    }°C"
                                    visible="{
                                        path: 'data>/current_observation/feelslike_c',
                                        formatter: 'hss.weather.view.Formatter.animateLabel'
                                    }"
                                    class="feltTemp"/>
                                <Label
                                    text="{data>/forecast/simpleforecast/forecastday/0/low/celsius}°C | {data>/forecast/simpleforecast/forecastday/0/high/celsius}°C" class="highLow"
                                    visible="{ path: 'data>/forecast/simpleforecast/forecastday/0/low/celsius', formatter: 'hss.weather.view.Formatter.animateLabel' }"/>
                            </HBox>
                        </VBox>
                        <layoutData>
                            <l:GridData spanL="6" spanM="6" spanS="12" />
                        </layoutData>
                    </FlexBox>
                    <VBox>
                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="Tile TileGust">
                            <hss:Compass
                                direction="{data>/current_observation/wind_degrees}" />
                            <VBox>
                                <Label
                                    text="{data>/current_observation/wind_kph} km/h"
                                    visible="{ path: 'data>/current_observation/wind_kph', formatter: 'hss.weather.view.Formatter.animateLabel' }"
                                    class="LabelGustStrength" />
                                <Label
                                    text="{data>/current_observation/wind_dir}"
                                    visible="{ path: 'data>/current_observation/wind_dir', formatter: 'hss.weather.view.Formatter.animateLabel' }"
                                    class="LabelGustDir" />
                            </VBox>
                            <layoutData>
                                <l:GridData spanL="6" spanM="6" spanS="12" />
                            </layoutData>
                        </HBox>
                        <HBox justifyContent="SpaceBetween" class="Tile TileGust" alignItems="Center">
                            <HBox alignItems="Center">
                                <hss:Rainometer
                                    value="{data>/current_observation/precip_today_metric}"
                                    showValue="true"
                                    unit="mm"
                                    visible="{ path: 'data>/current_observation/precip_today_metric', formatter: 'hss.weather.view.Formatter.animateLabel' }" />
                                <Label text="Niederschlag" class="LabelGustStrength" />
                            </HBox>
                            <!-- <hss:CircleProgress value="35" /> -->
                            <!-- <VBox>
                                <Label text="10% Chance" />
                                <Label text="{data>/current_observation/precip_today_metric} mm" />
                            </VBox> -->
                            <layoutData>
                                <l:GridData spanL="6" spanM="6" spanS="12" />
                            </layoutData>
                        </HBox>
                    </VBox>
                </HBox>

                <HBox
                    justifyContent="Center">
                    <VBox justifyContent="End" class="TileForecast Tile">
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                        <HBox height="12%" class="TileForecastBorderBottom">
                            <Text text="Freitag 16.10.2015" class="TileForcastBigText"/>
                        </HBox> 
                        <HBox height="83%" justifyContent="Center" class="TileForecastPaddingTop">
                            <VBox height="100%" width="100%" class="alignCenterVertically">
                                <HBox height="25%">
                                	<HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="-11°C"/>
                                		</HBox>
                                		<HBox  width="1.0rem" justifyContent="Center">
                                			<Text text="|"/>
                                		</HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="49°C"/>
                                		</HBox>
                                	</HBox>
                                </HBox>
                                <HBox height="35%">
                                    <Text text="Teilweise Bewölkt"/>
                                </HBox>
                                <HBox>
                                    <VBox>
                                        <Image src="./icons/water117.svg" class="image TileForecastPadding2" height="1.2rem"/>
                                    </VBox>
                                    <VBox class="TileForecastPaddingLeft">
                                        <HBox height="50%">
                                            <Text text="10%"/>
                                        </HBox>
                                        <HBox height="50%">
                                            <Text text="10 mm"/>
                                        </HBox>
                                    </VBox>
                                </HBox>
                            </VBox>
                            <VBox  width="100%" class="alignCenterVertically">

                                <Image src="./icons/svg/sw-25.svg" class="image TileForecastImagePaddingTop" height="5.0rem"/>

                            </VBox>
                        </HBox>
                    </VBox>
                    <VBox justifyContent="End" class="TileForecast Tile">
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                        <HBox height="12%" class="TileForecastBorderBottom">
                            <Text text="Freitag 16.10.2015" class="TileForcastBigText"/>
                        </HBox> 
                        <HBox height="83%" justifyContent="Center" class="TileForecastPaddingTop">
                            <VBox height="100%" width="100%" class="alignCenterVertically">
                                <HBox height="25%">
                                    <HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="1°C"/>
                                		</HBox>
                                		<HBox  width="1.0rem" justifyContent="Center">
                                			<Text text="|"/>
                                		</HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="9°C"/>
                                		</HBox>
                                	</HBox>
                                </HBox>
                                <HBox height="35%">
                                    <Text text="Teilweise Bewölkt"/>
                                </HBox>
                                <HBox>
                                    <VBox>
                                        <Image src="./icons/water117.svg" class="image TileForecastPadding2" height="1.2rem"/>
                                    </VBox>
                                    <VBox class="TileForecastPaddingLeft">
                                        <HBox height="50%">
                                            <Text text="10%"/>
                                        </HBox>
                                        <HBox height="50%">
                                            <Text text="10 mm"/>
                                        </HBox>
                                    </VBox>
                                </HBox>
                            </VBox>
                            <VBox  width="100%" class="alignCenterVertically">

                                <Image src="./icons/svg/sw-25.svg" class="image TileForecastImagePaddingTop" height="5.0rem"/>

                            </VBox>
                        </HBox>
                    </VBox>
                    <VBox justifyContent="End" class="TileForecast Tile">
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                        <HBox height="12%" class="TileForecastBorderBottom">
                            <Text text="Freitag 16.10.2015" class="TileForcastBigText"/>
                        </HBox> 
                        <HBox height="83%" justifyContent="Center" class="TileForecastPaddingTop">
                            <VBox height="100%" width="100%" class="alignCenterVertically">
                                <HBox height="25%">
                                    <HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="-11°C"/>
                                		</HBox>
                                		<HBox  width="1.0rem" justifyContent="Center">
                                			<Text text="|"/>
                                		</HBox>
                                		<HBox width="2.5rem" justifyContent="Center">
                                			<Text text="2°C"/>
                                		</HBox>
                                	</HBox>
                                </HBox>
                                <HBox height="35%">
                                    <Text text="Teilweise Bewölkt"/>
                                </HBox>
                                <HBox>
                                    <VBox>
                                        <Image src="./icons/water117.svg" class="image TileForecastPadding2" height="1.2rem"/>
                                    </VBox>
                                    <VBox class="TileForecastPaddingLeft">
                                        <HBox height="50%">
                                            <Text text="10%"/>
                                        </HBox>
                                        <HBox height="50%">
                                            <Text text="10 mm"/>
                                        </HBox>
                                    </VBox>
                                </HBox>
                            </VBox>
                            <VBox  width="100%" class="alignCenterVertically">

                                <Image src="./icons/svg/sw-25.svg" class="image TileForecastImagePaddingTop" height="5.0rem"/>

                            </VBox>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</core:View>
