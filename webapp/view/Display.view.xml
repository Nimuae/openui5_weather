<core:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    controllerName="hss.weather.controller.Main"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
<!--backgroundDesign="Solid"-->
    <Page
        
        showHeader="false">
        <content>
            <core:Icon
                src="sap-icon://action-settings"
                class="CustomizeBtn" />
                <HBox class="mainHBox">

                    <HBox>
                        <FlexBox justifyContent="End" class="TileTemp">
                            <Image src="./icons/svg/sw-25.svg" class="image"/>
                            <layoutData>
                                <l:GridData spanL="6" spanM="6" spanS="12" />
                            </layoutData>
                        </FlexBox>
                        <VBox>
                            <FlexBox justifyContent="End" class="TileGust">
                                <Text text="Gust" />
                                <layoutData>
                                    <l:GridData spanL="6" spanM="6" spanS="12" />
                                </layoutData>
                            </FlexBox>
                            <FlexBox justifyContent="End" class="TileGust">
                                <Text text="Rain" />
                                <layoutData>
                                    <l:GridData spanL="6" spanM="6" spanS="12" />
                                </layoutData>
                            </FlexBox>
                        </VBox>
                    </HBox>

                    <HBox>
                        <FlexBox justifyContent="End" class="TileForecast">
                            <Text text="Fortune" />
                            <layoutData>
                                <l:GridData spanL="4" spanM="4" spanS="12" />
                            </layoutData>
                        </FlexBox>
                        <FlexBox justifyContent="End" class="TileForecast">
                            <Text text="Fortune" />
                            <layoutData>
                                <l:GridData spanL="4" spanM="4" spanS="12" />
                            </layoutData>
                        </FlexBox>
                        <FlexBox justifyContent="End" class="TileForecast">
                            <Text text="Fortune" />
                            <layoutData>
                                <l:GridData spanL="4" spanM="4" spanS="12" />
                            </layoutData>
                        </FlexBox>
                    </HBox>

                </HBox>
        </content>
    </Page>
</core:View>