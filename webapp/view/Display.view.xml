<core:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    controllerName="hss.weather.controller.Main"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:hss="hss.weather.control">
<!--backgroundDesign="Solid"-->
    <Page
        showHeader="false">
        <content>
            <core:Icon
                src="sap-icon://action-settings"
                class="CustomizeBtn" />
            <VBox
                fitContainer="true"
                justifyContent="Center">
                <HBox
                    justifyContent="Center" >

                    <FlexBox justifyContent="End" class="TileTemp Tile">
                        <VBox width="100%" class="alignCenterVertically" justifyContent= "SpaceBetween">

                            <Label text="Wiesloch" class="town"/>
                            <VBox justifyContent="SpaceBetween" alignItems="Begin">
                                <Label text="30°C" class="curTemp"/>
                                <!-- <Label text="Teilweise Bewölkt" class="curWeather curWeatherMarginTop" textAlign="Center" /> -->
                            </VBox>

                            <VBox class="WeatherIcon" alignItems="Center">
                                <Image src="./icons/svg/sw-07.svg" height="8rem" class="ImgTempTileMarginBottom"/>
                                <Label text="Teilweise Bewölkt" class="curWeather" textAlign="Center" />
                            </VBox>

                            <HBox justifyContent= "SpaceBetween">
                                <Label text="Gefühlt: 2°C" class="feltTemp"/>
                                <Label text="3°C|5°C" class="highLow"/>
                            </HBox>
                        </VBox>
                        <layoutData>
                            <l:GridData spanL="6" spanM="6" spanS="12" />
                        </layoutData>
                    </FlexBox>
                    <VBox>
                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="Tile TileGust">
                            <Image src="{
                                    path: 'conditions>/current_observation/wind_dir',
                                    formatter: 'hss.weather.view.Formatter.windDir'
                                }" height="8rem" />
                            <VBox>
                                <Label text="{conditions>/current_observation/wind_kph} km/h" class="LabelGustStrength" />
                                <Label text="{
                                    path: 'conditions>/current_observation/wind_dir',
                                    formatter: 'hss.weather.view.Formatter.windDirString'
                                }" class="LabelGustDir" />
                            </VBox>
                            <layoutData>
                                <l:GridData spanL="6" spanM="6" spanS="12" />
                            </layoutData>
                        </HBox>
                        <HBox justifyContent="SpaceBetween" class="Tile TileGust" alignItems="Center">
                            <HBox alignItems="Center">
                                <hss:Rainometer
                                    value="{conditions>/current_observation/precip_today_metric}"
                                    showValue="true"
                                    unit="mm" />
                                <Label text="Niederschlag" class="LabelGustStrength" />
                            </HBox>
                            <!-- <hss:CircleProgress value="35" /> -->
                            <!-- <VBox>
                                <Label text="10% Chance" />
                                <Label text="{conditions>/current_observation/precip_today_metric} mm" />
                            </VBox> -->
                            <layoutData>
                                <l:GridData spanL="6" spanM="6" spanS="12" />
                            </layoutData>
                        </HBox>
                    </VBox>
                </HBox>

				<HBox
                    justifyContent="Center">
                    <VBox justifyContent="End" class="TileForecast Tile">
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                        <HBox height="12%" class="TileForecastBorderBottom">
                        	<Text text="Freitag 16.10.2015"/>
                        </HBox> 
                        <HBox height="83%" justifyContent="Center" class="TileForecastPaddingTop">
	                        <VBox height="100%" width="100%" class="alignCenterVertically">
	                        	<HBox height="25%">
		                        	<Text text="5°C | 10°C"/>
		                        </HBox>
		                        <HBox height="35%">
		                        	<Text text="Teilweise Bewölkt"/>
		                        </HBox>
		                        <HBox>
			                        <VBox>
			                        	<Image src="./icons/water117.svg" class="image TileForecastPadding2" height="1.2rem"/>
			                        </VBox>
			                        <VBox class="TileForecastPaddingLeft">
				                        <HBox height="50%">
				                        	<Text text="10%"/>
				                        </HBox>
				                        <HBox height="50%">
				                        	<Text text="10 mm"/>
				                        </HBox>
				                    </VBox>
			                    </HBox>
	                        </VBox>
	                        <VBox  width="100%" class="alignCenterVertically">

	                        	<Image src="./icons/svg/sw-25.svg" class="image TileForecastImagePaddingTop" height="6.5rem"/>

	                        </VBox>
                        </HBox>
                    </VBox>
                    <FlexBox justifyContent="End" class="TileForecast Tile">
                        <Text text="Fortune" />
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                    </FlexBox>
                    <FlexBox justifyContent="End" class="TileForecast Tile">
                        <Text text="Fortune" />
                        <layoutData>
                            <l:GridData spanL="4" spanM="4" spanS="12" />
                        </layoutData>
                    </FlexBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</core:View>
